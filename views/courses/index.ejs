<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Courses Offered</title>
    </head>

    <body>
        <h2 class="text-center" style="height: 20vh;">Our Courses</h2>
        <div class="table-responsive sub-table">
        <table class="table table-dark table-striped" style="margin: 0 auto; width: 80%;">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">max. students</th>
                    <th scope="col">Cost</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>

            <tbody>
                <% courses.forEach((course) => { %> 
                <tr>
                    <th scope="row">
                        <td>
                            <a href="<%= `courses/${course._id}` %>">
                                <%= course.title %>
                            </a>
                            
                        </td>
                        <td>
                            <%= course.description %>
                        </td>
                        <td>
                            <%= course.maxStudents %>
                        </td>
                        <td>
                            <%= course.cost %>
                        </td>
                        <td>
                            <a class="btn btn-primary edit-user-btn" href="<%= `courses/${course._id}/edit` %>" role="button">
                                <i class="fa-regular fa-pen-to-square"></i>
                                Edit
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-danger delete-user-btn" href="<%= `courses/${course._id}/delete?_method=DELETE` %>" role="button" onclick="return confirm(`Are you sure you want to delete <%= course.name %>?`)">
                                <i class="fa-solid fa-trash"></i>
                                Delete
                            </a>
                        </td>
                    </th>
                </tr>
                <% }) %>
            </tbody>
        </table>
        </div>
        
    </body>

</html>