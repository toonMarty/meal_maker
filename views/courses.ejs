<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Courses</title>
    </head>

    <body>
        <div class="container">
            <div class="row align-items-center" style="height: 100vh; ">
                <div class="col-md-6">
                    <img src="/images/entree-sour-creme.jpg" class="img-fluid" />
                </div>
                
                <div class="col-md-6">
                    <h1>Our Courses</h1>
                    <% offeredCourses.forEach(course => { %>
                            <h5>
                                <%= course.title %>
                            </h5>
                            <span>
                                $ <%= course.cost %>
                            </span>
                    <% }) %>
                </div>
            </div>
        </div>
    </body>
</html>